
div(role="dialog")#set-password.modal-single-input.modal.fade
	div.modal-dialog
		div.modal-content
			div.modal-header
				h3.modal-title Reset Password
			div.modal-body
				form(method="post")#set-password-form.well.span5
					p Please enter your new password
					input(type="password", name="pass", id='pass-tf').span5.required
					div.alert.alert-error.hide
					button(type="submit")#submit.btn.btn-primary Submit
					button(data-dismiss="alert").close.btn-default
			div.modal-footer